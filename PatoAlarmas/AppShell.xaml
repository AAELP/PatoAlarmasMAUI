    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PatoAlarmas.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PatoAlarmas">

    <!-- DefiniciÃ³n de rutas -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Admin"
        ContentTemplate="{DataTemplate local:AdminPage}"
        Route="AdminPage" />
    <ShellContent
        Title="User"
        ContentTemplate="{DataTemplate local:UserPage}"
        Route="UserPage" />
    <ShellContent
        Title="Citas"
        ContentTemplate="{DataTemplate local:CitasPage}"
        Route="CitasPage" />
    <ShellContent
        Title="Vehiculos"
        ContentTemplate="{DataTemplate local:VehiculosPage}"
        Route="VehiculosPage" />

</Shell>
